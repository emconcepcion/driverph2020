<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <TextView
        android:id="@+id/chapter_name_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Chapter name"
        android:textColor="@android:color/transparent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/you_scored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chapter_name_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/you_scored"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_score_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/you_scored"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="x/5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionsAttempted"
        android:layout_below="@id/txt_score_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Note: Only the questions that you attempted to answer will be displayed below:"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionsAttempted"
        android:layout_above="@id/btn_unlock"
        android:layout_marginTop="0dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_light">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1"
                android:id="@+id/list_view">
            </ListView>
        </LinearLayout>

    </ScrollView>

    <!--    </LinearLayout>-->

    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Unlock next lesson"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/yellow_login_button"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_review"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_login_button"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_retake"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/retake"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_login_button"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/email_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_unlock"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="myEmail"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/userId_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_unlock"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/email_result"
        android:text="myUserId"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>