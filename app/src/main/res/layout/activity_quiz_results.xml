<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:layout_below="@id/toolbar"
        android:id="@+id/chapter_name_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Chapter name" />

    <TextView
        android:id="@+id/you_scored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chapter_name_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/you_scored"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_score_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/you_scored"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="x/5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="530dp"
        android:layout_below="@id/txt_score_result"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="1dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_view">

            </ListView>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Unlock next lesson"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_review"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_margin="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_retake"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/retake"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:layout_alignParentRight="true" />

</RelativeLayout>