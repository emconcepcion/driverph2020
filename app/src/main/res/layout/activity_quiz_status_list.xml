<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizStatusList">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/subForm"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/recyclerView">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:id="@+id/subForm">

        <TextView
            android:id="@+id/txt_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quiz Chapter here"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_attempt_recyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attempt #"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_score_for_syncing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="score"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_numItems_recyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="total_items_here"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="email"
            android:id="@+id/txt_email"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/need_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_refresh_list_to_proceed"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="invisible"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_refresh_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh list"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="#A82196F3"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_view_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#A82196F3"
            android:text="View Test Result"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_backToQMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#A82196F3"
                android:text="Back to Dashboard"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_date_of_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_date"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="gone"
           />

        <TextView
            android:id="@+id/tv_user_id_StatusList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_id"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_duration_StatusList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="duration"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_isLocked_StatusList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="islocked"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_isCompleted_StatusList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iscompleted"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_userID"
            android:visibility="visible"
            />


    </LinearLayout>

</RelativeLayout>