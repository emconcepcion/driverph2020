<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lesson">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/linear2"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Progress Overview"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <com.anton46.stepsview.StepsView
            android:id="@+id/spb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        //#A9D5EAFB
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="30dp"
            >
<!--            #F2F6F8FA
                #D9F6F8FA-->
            <TextView
                android:id="@+id/progress_Module"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Module"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="25dp"
                android:textAlignment="center"
                android:background="@color/yellow"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lessTitle"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/border_yellow"
                android:layout_below="@id/progress_Module"
                android:layout_marginHorizontal="25dp"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:text="Lesson"
                android:textAlignment="center"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        >
        <Button
            android:id="@+id/btn_prev"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/ic_arrow_left_long"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_next_lesson"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_right_long"
            android:layout_marginHorizontal="100dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



</RelativeLayout>