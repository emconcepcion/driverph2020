<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#2547FF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SimulationPopup">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="toastStyle">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">#FFEF60</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#777777</item>
        <item name="stIconStart">@drawable/ic_select</item>
        <item name="stLength">LONG</item>
        <item name="android:gravity">center</item>
    </style>

</resources>